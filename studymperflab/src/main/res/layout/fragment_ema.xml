<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical"
    android:weightSum="1">
    <!-- work annotation title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/tealsecondary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="EMA"
            android:textColor="@color/fontPrimanry"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:background="@color/backGroundDark"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- questions with radio button answers-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <!-- content -->
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.2"
                    android:textSize="16dp"
                    app:bootstrapBrand="success"
                    app:bootstrapText="Are you feeling stess?" />

                <RadioGroup
                    android:id="@+id/radio_stress"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_stress_option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES!"
                        android:buttonTint="@color/tealsecondary"
                        android:textColor="#ffff" />

                    <RadioButton
                        android:id="@+id/radio_stress_option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="YES"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_stress_option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="yes"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_stress_option4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="no"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_stress_option5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_stress_option6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO!"
                        android:textColor="#ffff"
                        />

                </RadioGroup>


                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.2"
                    android:textSize="16dp"
                    app:bootstrapBrand="success"
                    app:bootstrapText="Are you feeling anger/frustration?	?" />

                <RadioGroup
                    android:id="@+id/radio_anger"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_anger_option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES!"
                        android:buttonTint="@color/tealsecondary"
                        android:textColor="#ffff" />

                    <RadioButton
                        android:id="@+id/radio_anger_option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="YES"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_anger_option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="yes"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_anger_option4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="no"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_anger_option5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_anger_option6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO!"
                        android:textColor="#ffff"
                        />

                </RadioGroup>
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.2"
                    android:textSize="16dp"
                    app:bootstrapBrand="success"
                    app:bootstrapText="Are you feeling happy?" />

                <RadioGroup
                    android:id="@+id/radio_happy"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_happy_option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES!"
                        android:buttonTint="@color/tealsecondary"
                        android:textColor="#ffff" />

                    <RadioButton
                        android:id="@+id/radio_happy_option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="YES"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_happy_option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="yes"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_happy_option4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="no"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_happy_option5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_happy_option6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO!"
                        android:textColor="#ffff"
                        />

                </RadioGroup>
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.2"
                    android:textSize="16dp"
                    app:bootstrapBrand="success"
                    app:bootstrapText="Are you feeling cheerful?" />

                <RadioGroup
                    android:id="@+id/radio_cheerful"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_cheerful_option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES!"
                        android:buttonTint="@color/tealsecondary"
                        android:textColor="#ffff" />

                    <RadioButton
                        android:id="@+id/radio_cheerful_option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="YES"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_cheerful_option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="yes"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_cheerful_option4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="no"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_cheerful_option5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_cheerful_option6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO!"
                        android:textColor="#ffff"
                        />

                </RadioGroup>
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.2"
                    android:textSize="16dp"
                    app:bootstrapBrand="success"
                    app:bootstrapText="Are you feeling sad?" />

                <RadioGroup
                    android:id="@+id/radio_sad"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_sad_option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES!"
                        android:buttonTint="@color/tealsecondary"
                        android:textColor="#ffff" />

                    <RadioButton
                        android:id="@+id/radio_sad_option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="YES"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_sad_option3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="yes"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_sad_option4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="no"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_sad_option5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO"
                        android:textColor="#ffff"
                        />

                    <RadioButton
                        android:id="@+id/radio_sad_option6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="@color/tealsecondary"

                        android:text="NO!"
                        android:textColor="#ffff"
                        />

                </RadioGroup>

            </LinearLayout>
        </ScrollView>




        <!-- editbox for Notes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:textSize="15dp"
                app:bootstrapBrand="success"
                app:bootstrapText="Notes: " />

            <EditText
                android:id="@+id/editView_notes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:singleLine="true"
                android:textColor="#FFFF" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_work_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.05"
                app:bootstrapBrand="success"
                app:bootstrapText="{fa_plus} Add"
                app:buttonMode="regular"
                app:roundedCorners="true"
                app:showOutline="false" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">
            <!-- start button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btn_work_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:bootstrapText="{fa_save} Save"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false" />
            </LinearLayout><!--stop button -->

            <!--interupt button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btn_work_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:bootstrapText="{fa_ban} Cancel"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <!--close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.1">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_borderColor="@color/tealsecondary"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="@color/backGroundDark"
            fancy:fb_fontIconResource="&#xf0a8;"
            fancy:fb_radius="10dp"
            fancy:fb_text="Back"
            fancy:fb_textColor="#ff00"
            fancy:fb_textSize="16sp" />
    </LinearLayout>

</LinearLayout>
