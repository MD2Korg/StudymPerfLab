<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical"
    android:weightSum="1">
    <!-- work annotation title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/tealsecondary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Work Annotation"
            android:textColor="@color/fontPrimanry"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:background="@color/backGroundDark"
        android:orientation="vertical"
        android:weightSum="1">

        <!--select work type  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            >
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                app:bootstrapBrand="success"
                android:textSize="16dp"
                app:bootstrapText="Select work Type"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>
        <!-- list with check box-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RadioButton android:id="@+id/radio_baseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:text="Baseline rest period"
                android:textColor="#ffff"
                android:textSize="15dp"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/radio_etray_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:text="e-Tray task"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/radio_typing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:text="Typing task"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/radio_post_typing_qualtrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post typing task qualtrics [untimed]"
                android:layout_weight="0.09"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/radio_post_typing_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textSize="15dp"
                android:text="Post typing rest period"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_public_speaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textSize="15dp"
                android:text="Public speaking task sections"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_mental_arithmatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textSize="15dp"
                android:text="Mental arithmatic task"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_post_stress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textSize="15dp"
                android:text="Post stress task recovery"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_qualtric_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textSize="15dp"
                android:text="Qualitrics questionnaires [untimed]"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_bathroom_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="15dp"
                android:text="Participant requested bathroom break  [unanticipated, untimed]"
                android:textColor="#ffff"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_drink_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Participant drinks water or other beverage [unanticipated, untimed]"
                android:textColor="#ffff"
                android:textSize="15dp"
                android:buttonTint="@color/tealsecondary"
                android:onClick="onRadioButtonClicked"/>

        </LinearLayout>






    </LinearLayout>


    <!--close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.1">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_select_work_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_borderColor="@color/tealsecondary"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="@color/backGroundDark"
            fancy:fb_fontIconResource="&#xf0a9;"
            fancy:fb_radius="10dp"
            fancy:fb_text="Go"
            fancy:fb_textColor="#ff00"
            fancy:fb_textSize="16sp" />
    </LinearLayout>

</LinearLayout>
